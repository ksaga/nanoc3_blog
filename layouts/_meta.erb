Posted on <%= pretty_time(item[:created_at]) %> |
<% if disqus_shortname %>
  <% @include_disqus_js = true %>
  <a href='<%= route_path(item) %>#disqus_thread'></a> |
<% end %>
<% if item[:tags] %>
  Keywords <%= item[:tags].sort.map do |tag|
    "<a class='tag' href='/tags/#{tag}.html'>#{tag}</a>"
  end.join(', ') %>
<% end %>
